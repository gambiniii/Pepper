<%- include('includes/head') %>
<%- include('includes/nav') %>

<body>
  <section class="container my-5">
    <h1 class="lead" style="font-size: 2.25rem; text-align: center;">
      
      <% if(!user){ %>
        Crie sua conta
      <% } else if(!userEdit._id) { %>
        Cadastrar usu치rio
      <% } else {%>
        Atualizar usu치rio
      <% } %>

    </h1>
    <hr class="container" style="width: 25%; margin-top: 0; border: 0;">
    <%- include('includes/messages') %>


    <div class="container my-4">
      <% if(userEdit._id){ %>
        <form action="/register/update/<%= userEdit._id %>" method="POST" class="form-cadastro">
      <% } else { %>
        <form action="/register/register" method="POST" class="form-cadastro">
      <% } %>

      <div class="row">
        <div class="col-md-6" align="center">

          <input type="hidden" name="_csrf" value="<%= csrfToken%>">

          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">Nome</label>
            <input type="text" class="formulario" placeholder="Nome" name="nome" value="<%= userEdit.nome %>">
          </div>

          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">Sobrenome</label>
            <input type="text" class="formulario" placeholder="Sobrenome" name="sobrenome" value="<%= userEdit.sobrenome %>">
          </div>

          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">CPF</label>
            <input type="text" class="formulario" placeholder="123.456.789-12" name="cpf" value="<%= userEdit.cpf %>">
          </div>
        </div>


        <div class="col-md-6" align="center">
          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">E-mail</label>
            <input type="email" class="formulario" placeholder="Endereco de e-mail" name="email" value="<%= userEdit.email %>">
          </div>

          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">Senha</label>
            <input type="password" class="formulario" placeholder="Senha..." name="password">
          </div>

          <div class="form-group mt-2" style="width: 80%;">
            <label class="lead">Senha</label>
            <input type="password" class="formulario" placeholder="Confirme a Senha..." name="confirmPassword">
          </div>

        </div>

        <% if(!user){ %>
          <button type="submit" class="btn btn-success" style="width: 10%; margin-left: 6%; margin-top: 2%;">Criar conta</button>
        <% } else {%>
          <div class="container">
            <div class="row">
              <div class="col-md-6">
                <div class="form-check form-switch" style="margin-left: 10%; margin-top: 5%;">


                  <% if(userEdit.userType === 'admin') {%>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" name="isAdmin" style="    background-color: #5b5b5b;" checked>
                    <label class="form-check-label" for="flexSwitchCheckDefault">Usu치rio Administrador</label>
                  <% } else {%>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" name="isAdmin">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Usu치rio Administrador</label>
                  <% } %>
                </div>
                
              </div>
              <div class="col-md-6">
                <% if(!userEdit._id) {%>
                <button type="submit" class="btn btn-success" style="width: 22%; margin-left: 10%; margin-top: 4%;">Criar conta</button>
                <% } else {%> 
                  <button type="submit" class="btn btn-success" style="width: 26%; margin-left: 10%; margin-top: 4%;">Atualizar conta</button>
                <% } %>

              </div>
            </div>
          </div>
        <% } %>

      </div>
    </div>
    
  </div>
  </form>
</div>


</div>
</section>

  <%- include('includes/footer') %>
